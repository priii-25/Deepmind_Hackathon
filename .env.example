# ──────────────────────────────────────────────────────
# Eve — Environment Variables
# Copy to .env and fill in your values
# ──────────────────────────────────────────────────────

# ── Required ──────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/teems
GEMINI_API_KEY=your-gemini-key-here

# ── Feature Flags (all default to true in prod) ──────
# Set to false to disable. See EVE_BUILD_PLAN.md for details.
FF_USE_AUTH0=false
FF_USE_S3=false
FF_USE_REDIS=false
FF_USE_WEB_SEARCH=false
FF_USE_OCR=false
FF_USE_BRANDFETCH=false
FF_LLM_PROVIDER=gemini
FF_USE_FULL_TEXT_SEARCH=true

# ── Agent Flags ───────────────────────────────────────
FF_ENABLE_UGC_VIDEO=false
FF_ENABLE_FASHION_PHOTO=false
FF_ENABLE_SOCIAL_MEDIA=false
FF_ENABLE_PRESENTATION=false
FF_ENABLE_NOTETAKER=false
FF_USE_ELEVENLABS=false
FF_USE_LIPSYNC=false

# ── Auth0 (when FF_USE_AUTH0=true) ────────────────────
# AUTH0_DOMAIN=your-tenant.us.auth0.com
# AUTH0_AUDIENCE=https://api.teems.ai

# ── AWS S3 (when FF_USE_S3=true) ─────────────────────
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=teems-agents

# ── Redis (when FF_USE_REDIS=true) ────────────────────
# REDIS_URL=redis://localhost:6379

# ── LLM Providers ────────────────────────────────────
# Default model: gemini-3-flash-preview (via Gemini API)
# OPENAI_API_KEY=        # optional fallback when FF_LLM_PROVIDER=openai
# AIML_API_KEY=          # optional fallback when FF_LLM_PROVIDER=aiml
# NOTE: GEMINI_API_KEY is used for both chat/tool-calling AND Fashion Photo image generation

# ── Web Search (when FF_USE_WEB_SEARCH=true) ─────────
# TAVILY_API_KEY=

# ── Brandfetch (when FF_USE_BRANDFETCH=true) ──────────
# BRANDFETCH_API_KEY=

# ── UGC Video Agent ──────────────────────────────────
# ELEVENLABS_API_KEY=
# LIPSYNC_API_KEY=

# ── Social Media Agent ───────────────────────────────
# TIKTOK_CLIENT_KEY=
# TIKTOK_CLIENT_SECRET=
# FACEBOOK_APP_ID=
# FACEBOOK_APP_SECRET=

# ── Presentation Agent ───────────────────────────────
# SLIDESPEAK_API_KEY=

# ── Notetaker Agent (Meeting BaaS) ──────────────────
# MEETINGBAAS_API_KEY=
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# ── App Config ────────────────────────────────────────
ENV=development
LOG_LEVEL=info
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=*
